  "license": "BSD",
  "devDependencies": {
    "sinon-chai": "~2.4.0",
    "tmp": "0.0.23",
    "superagent": "~0.15.5",
    "sinon": "~1.7.3",
    "supertest": "~0.8.3",
    "chai": "~1.8.1",
    "mocha": "~1.17.0",
    "pre-commit": "0.0.4",
    "jshint": "~2.4.1"
  },
  "dependencies": {
    "mosca": "~0.20.0",
    "commander": "~2.1.0",
    "bunyan": "~0.22.1",
    "mqtt": "~0.3.7",
    "async": "~0.2.9",
    "callback-stream": "~1.0.0",
